# --rm supprime automatiquement le conteneur après execution
# -i pour le mode interactif
# -t pour créer un pseudo tty
# alpine le nom de l'image
docker run --rm -it alpine

# un point d'entré peut etre spécifier avec l'option --entrypoint où à la fin
# de la commande
# docker run --rm -it alpine /bin/sh
# docker run --rm --entrypoint "/bin/sh" -it alpine
