# service est une commande qui permet de gerer les services dans un environnement
# orchestrer (swarm)
# create permet de créer le service
# --name definit le nom du service
# --network définit le nom du réseau auquel le service est associé
# --env définit des variable d'environnement (se réferer au spécification des conteneur dans dockerhub)
# rabbitmq le nom du conteneur

docker service create \
        --name orbital-command \
        --network overmind \
        --env RABBITMQ_DEFAULT_USER='rabbit'\
        --env RABBITMQ_DEFAULT_PASS='rabbit_password'\
         rabbitmq
