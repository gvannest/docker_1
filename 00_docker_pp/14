# --detach ou -d pour l'execution en arrière plan
# --link connect 2 conteneur entre eux
# --publish ou -p pour le port fowarding <port-hôte>|<port-invité>
# --name pour le nom du conteneur
# wordpress le nom de l'images

docker run \
        --detach \
        --link spawning-pool \
        --publish 8080:80 \
        --name lair \
        --env WORDPRESS_DB_HOST='spawning-pool' \
        --env WORDPRESS_DB_NAME='zerglings' \
        --env WORDPRESS_DB_USER='root' \
        --env WORDPRESS_DB_PASSWORD='Kerrigan' \
    wordpress
